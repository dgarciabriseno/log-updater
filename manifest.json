{
  "manifest_version": 2,
  "name": "Telework Log Updater",
  "version": "1.0.0",

  "description": "Interface for updating telework logs",

  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://github.com/dgarciabriseno/log-updater/releases/download/update-manifest/update-manifest.json"
    }
  },

  "icons": {
    "48": "images/icon.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
      "default_icon": "images/icon.png",
      "default_title": "Telework Updater",
      "default_popup": "insert_form.html"
  }
}

